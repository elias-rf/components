{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "command": "${workspaceFolder}/node_modules/.bin/ava",
            "group": "test",
            "args": ["${file}"],
            "label": "runCurrentTest",
            "options": {
                "env": { "NODE_ENV": "test" }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}
