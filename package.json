{
  "name": "@vt/intranet",
  "private": true,
  "version": "1.1.0",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "start": "cd server && node dist/index.js",
    "build": "cd server && npm run build && cd ../packages/client && npm run build",
    "update": "cd client && npm install && cd ../server && npm install && cd .. && git submodule update --remote",
    "dev": "concurrently \"npm run dev -w @vt/server\" \"npm run dev -w @vt/client\" ",
    "test": "concurrently \"npm run test:watch -w @vt/server\" \"npm run test:watch -w @vt/client\" ",
    "test:e2e": "playwright test",
    "storybook": "npm run storybook -w @vt/client"
  },
  "devDependencies": {
    "concurrently": "^7.2.2"
  },
  "dependencies": {
    "json-rpc-2.0": "^1.3.0"
  }
}
