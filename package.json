{
  "name": "@er/intranet",
  "private": true,
  "version": "1.1.0",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "start": "cd apps/server && node dist/index.js",
    "build": "npm run build --workspaces",
    "update": "npx npm-check-updates --deep --interactive",
    "dev": "concurrently \"npm:dev:*\" ",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "teste:e2e": "playwright test",
    "storybook": "npm run storybook -w @er/client",
    "dev:server": "npm run dev -w @er/server",
    "dev:client": "npm run dev -w @er/client",
    "test:server": "npm run test:watch -w @er/server",
    "test:client": "npm run test:watch -w @er/client",
    "test:utils": "npm run test:watch -w @er/utils"
  },
  "devDependencies": {
    "@types/node": "18.7.14",
    "@babel/core": "^7.18.13",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@jest/globals": "^29.0.2",
    "@types/jest": "^29.0.0",
    "babel-jest": "^29.0.2",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "@vitest/ui": "^0.23.0",
    "concurrently": "^7.3.0",
    "eslint": "^8.23.0",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "^7.31.6",
    "eslint-plugin-react-hooks": "4.6.0",
    "jest": "^29.0.2",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2",
    "vitest": "^0.23.0"
  }
}
