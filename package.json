{
  "name": "@er/intranet",
  "private": true,
  "version": "1.1.0",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "start": "npm run start -w @er/server",
    "build": "npm run build --workspaces",
    "update": "npx npm-check-updates --deep --interactive",
    "dev": "concurrently \"npm:dev:*\" ",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "teste:e2e": "playwright test",
    "storybook": "npm run storybook -w @er/client",
    "dev:server": "npm run dev -w @er/server",
    "dev:client": "npm run dev -w @er/client",
    "test:server": "npm run test:watch -w @er/server",
    "test:client": "npm run test:watch -w @er/client",
    "test:utils": "npm run test:watch -w @er/utils"
  },
  "devDependencies": {
    "@types/node": "18.7.18",
    "@babel/core": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-typescript": "^7.18.6",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "@vitest/ui": "^0.23.4",
    "concurrently": "^7.4.0",
    "eslint": "^8.23.1",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "4.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "vitest": "^0.23.4"
  }
}
