{
  "name": "@er/intranet",
  "private": true,
  "version": "1.1.0",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "start": "cd server && node dist/index.js",
    "build": "npm run lerna run build",
    "update": "cd client && npm install && cd ../server && npm install && cd .. && git submodule update --remote",
    "dev": "concurrently \"npm:dev:*\" ",
    "test": "npm run test --workspaces",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "teste:e2e": "playwright test",
    "storybook": "npm run storybook -w @er/client",
    "dev:server": "npm run dev -w @er/server",
    "dev:client": "npm run dev -w @er/client",
    "test:server": "npm run test:watch -w @er/server",
    "test:client": "npm run test:watch -w @er/client",
    "test:utils": "npm run test:watch -w @er/utils"
  },
  "devDependencies": {
    "@types/node": "18.7.14",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "@vitest/ui": "^0.22.1",
    "concurrently": "^7.3.0",
    "eslint": "^8.23.0",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "^7.31.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "typescript": "^4.8.2",
    "vite": "^3.0.9",
    "vitest": "^0.22.1"
  }
}
