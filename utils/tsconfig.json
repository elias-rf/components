{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["esnext"],
    "baseUrl": "./src",
    "outDir": "./lib",
    "strictNullChecks": true,
    "importHelpers": true,
    "emitDeclarationOnly": false,
    "declaration": true,
    "isolatedModules": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["./src"],
  "exclude": ["node_modules/", "node_modules"]
}
